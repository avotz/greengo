.inner
	max-width 1150px
	margin 0 auto
	position relative
	padding-left 2rem
	padding-right 2rem

.header
	position: relative;
	background-color: #FFF;
	padding: 0.5rem;
	height: 100px;
	width: 100%;
	border-bottom: 1px solid #d9d9d9;
	border-color: rgba(0,0,0,0.09);
	z-index: 999;
	&-logo 
		display inline-block
		width 100px
	&-menu 
		display: none;
		position: absolute;
		top: 81px;
		left: 0;
		right: 0;
		background-color: verde;
		text-align center
		li 
			display block
		a 
			display block
			color white
			padding 1rem 
	&-btn-menu
		position absolute
		right 1rem
		background-color transparent
		border none 
		color verde
		font-size 2rem
		top 20px
		outline none
	
	
@media screen and (min-width: 1024px)
	.header
		position: absolute;
		background-color: white;
		height: 90px;
		bottom: -90px;
		transition: all 0.3s ease;
		padding-left: 0;
		padding-right: 0;
		&-btn-menu
			display none
		&-menu
			display: block !important;
			float: right;
			position: static;
			line-height: 80px;
			background-color white
			text-align left
			ul 
				display flex
				flex-wrap wrap 
				justify-content space-between
			li 
				position relative
			a 
				display block
				padding 0 1rem
				color #3e6520
				&:hover 
					color verde
		&--fixed
			//background-color #000
			height 80px
			position fixed
			top 0
			.header-container
				background-color transparent
			.header-logo
				width 90px//70px
				opacity 1
				margin-top 5px
			.header-menu
				border-top none
				line-height: 71px;
				&-link
					padding-top 1rem
					color white
					line-height 30px
					//font-size 1rem 

.banner
	width 100%
	height 30vh
	position relative
	
	&.banner-page
		height 250px//400px;
		.item
			height 250px//400px;
			&-info
				top 70%
	
	/*.inner
		position relative*/
	.item 
		background-size cover
		background-repeat no-repeat
		background-position top center
		height 30vh
		//position relative
		&-info
			position absolute
			padding 1rem
			color white
			top 35%
			transform translate(0, -50%)
			font-size 12px
			background-color rgba(0,0,0,.75)
			text-align center
			display none
			h2
				font-size 1rem
				margin 24px 0
				font-weight bold
				text-transform uppercase
				line-height 1em
				position relative
				&:after
					display block
					content ''
					width 50%
					height 4px 
					background-color verde
					position absolute
					bottom -20px
					left 50%
					transform translate(-50%, 0)
				
				
			p
				font-size 1rem

				
						
			
	img 
		display block
		width 100%
	.owl-dots
		display none
		text-align center
		position absolute
		left 0
		right 0
		bottom 95px
		z-index 901
		.owl-dot
			display inline-block
			&.active
				span
					background-color white
			span
				width 10px
				height 10px
				margin 5px 7px
				background transparent
				border 2px solid white
				display block
				border-radius: 30px
	
		
	.owl-prev
	.owl-next
		display none
		position absolute
		top 50%
		transform translate(0, -50%)
		font-family: 'av' !important;
		color white
		font-size 3rem
		z-index	902
			
	.owl-prev
		left 1rem
		&:before
			content: "\f104";
			opacity 1
	.owl-next
		right 1rem
		&:before
			content: "\f105";
			opacity 1
	&-link
		position absolute
		bottom 1rem
		left 0
		right 0
		z-index 100
		text-align center
		a 
			background-color transparent
			font-size 2rem
			
		
@media screen and (min-width: 768px)
	.banner
		height 100vh
		.item 
			height 100vh
			&-info
				display block
				top 45%
				left 50%
				padding-top 0
				padding-left 0
				width 70%
				transform translate(-50%, -50%)
				//font-size 32px
				text-align center
				padding 1rem
				h2
					font-size 2.5em
					margin 32px 0
					
				p
					font-size 1.3rem
		&.banner-page
			height 400px;
			.item
				height 400px;
				&-info
					top 70%
					left auto
					max-width 600px
		.owl-dots			
		.owl-prev
		.owl-next
			display block
	
